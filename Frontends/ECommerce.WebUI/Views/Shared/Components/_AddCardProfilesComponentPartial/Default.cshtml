<!-- Add Credit Card Modal -->
<div class="modal" id="addCardModal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2><i class="far fa-credit-card"></i> Yeni Kredi Kartı Ekle</h2>
        <form id="addCardForm">
            <div class="form-group">
                <label>Kart Numarası</label>
                <input type="text" id="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19" inputmode="numeric" pattern="\d{4}\s\d{4}\s\d{4}\s\d{4}" required>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Son Kullanma Tarihi</label>
                    <input type="text" id="cardExpiry" placeholder="AA/YY" pattern="\d{2}/\d{2}" maxlength="5" required>
                </div>
                <div class="form-group">
                    <label>CVV</label>
                    <div class="cvv-input-container">
                        <input type="password" id="cardCvv" placeholder="•••" maxlength="3" pattern="\d*" required>
                        <i class="fas fa-eye toggle-cvv" id="toggleCvv"></i>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Kart Üzerindeki İsim</label>
                <input type="text" id="cardHolder" placeholder="Ad Soyad" required>
            </div>
            <div class="form-checkbox">
                <input type="checkbox" id="setDefaultCard">
                <label for="setDefaultCard">Varsayılan kart olarak ayarla</label>
            </div>
            <button type="submit" class="save-btn">Kartı Kaydet</button>
        </form>
    </div>
</div>