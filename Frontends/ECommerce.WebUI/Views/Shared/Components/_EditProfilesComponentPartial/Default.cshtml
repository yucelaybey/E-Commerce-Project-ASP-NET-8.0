<!-- Edit Profile Modal -->
<div class="modal" id="editProfileModal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2><i class="fas fa-user-edit"></i> Profil Bilgilerini Düzenle</h2>
        <form id="editProfileForm">
            <div class="form-group">
                <label>Ad</label>
                <input type="text" id="editFirstName" placeholder="Ad" required>
            </div>
            <div class="form-group">
                <label>Soyad</label>
                <input type="text" id="editLastName" placeholder="Soyad" required>
            </div>
            <div class="form-group">
                <label>E-posta</label>
                <input type="email" id="editEmail" placeholder="E-posta" required>
            </div>
            <div class="form-group">
                <label>Telefon</label>
                <input type="tel" id="editPhone" placeholder="Telefon" required>
            </div>
            <div class="form-group">
                <label>Doğum Tarihi</label>
                <input type="date" id="editBirthDate" required>
            </div>
            <button type="submit" class="save-btn">Kaydet</button>
        </form>
    </div>
</div>