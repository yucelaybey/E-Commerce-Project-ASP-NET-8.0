<section class="cart-items">
    <div class="select-all">
        <input type="checkbox" id="select-all-checkbox">
        <label for="select-all-checkbox">Tümünü Seç</label>
    </div>
    <div class="cart-item">
        <input type="checkbox" class="item-checkbox">
        <div class="item-image">
            <img src="product1.jpg" alt="Ürün 1">
        </div>
        <div class="item-details">
            <h2 class="item-title">Ürün 1</h2>
            <p class="item-description">Bu ürün çok kaliteli ve dayanıklıdır. Her türlü kullanım için uygundur.</p>
        </div>
        <div class="quantity-controls">
            <button class="quantity-btn decrease">-</button>
            <span class="quantity">1</span>
            <button class="quantity-btn increase">+</button>
        </div>
        <div class="item-price">
            ₺100.00
        </div>
        <button class="remove-item" aria-label="Ürünü sil">
            <i class="fas fa-trash"></i>
        </button>
    </div>
</section>