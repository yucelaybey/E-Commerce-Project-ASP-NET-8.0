<!-- Edit Credit Card Modal -->
<div class="modal" id="editCardModal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2><i class="far fa-credit-card"></i> Kredi Kartı Düzenle</h2>
        <form id="editCardForm">
            <input type="hidden" id="editCardId">
            <div class="form-group">
                <label>Kart Numarası</label>
                <input type="text" id="editCardNumber" placeholder="1234 5678 9012 3456" maxlength="19" inputmode="numeric" pattern="\d{4}\s\d{4}\s\d{4}\s\d{4}" required>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Son Kullanma Tarihi</label>
                    <input type="text" id="editCardExpiry" placeholder="AA/YY" pattern="\d{2}/\d{2}" required>
                </div>
                <div class="form-group">
                    <label>CVV</label>
                    <div class="cvv-input-container">
                        <input type="password" id="cardCvv" placeholder="•••" maxlength="3" pattern="\d*" required>
                        <i class="fas fa-eye toggle-cvv" id="toggleCvv"></i>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Kart Üzerindeki İsim</label>
                <input type="text" id="editCardHolder" placeholder="Ad Soyad" required>
            </div>
            <div class="form-checkbox">
                <input type="checkbox" id="editSetDefaultCard">
                <label for="editSetDefaultCard">Varsayılan kart olarak ayarla</label>
            </div>
            <div class="form-actions">
                <button type="submit" class="save-btn">Güncelle</button>
            </div>
        </form>
    </div>
</div>