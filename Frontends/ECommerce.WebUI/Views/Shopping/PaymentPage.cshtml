
@{
    ViewData["Title"] = "PaymentPage";
    Layout = "~/Views/UILayout/UIPaymentLayout.cshtml";
}
<main class="payment-main">
    <div class="container">
        <div class="payment-grid">
            <!-- Ödeme Formu -->
            <div class="payment-form-container">
                <h1><i class="fas fa-credit-card"></i> Ödeme Bilgileri</h1>

                <!-- Ödeme Yöntemleri -->
                <div class="payment-methods">
                    <div class="method-tabs">
                        <button class="tab-btn active" data-tab="saved-cards">
                            <i class="far fa-credit-card"></i> Kayıtlı Kartlar
                        </button>
                        <button class="tab-btn" data-tab="credit-card">
                            <i class="far fa-credit-card"></i> Kredi Kartı
                        </button>
                        <button class="tab-btn" data-tab="paypal">
                            <i class="fab fa-paypal"></i> PayPal
                        </button>
                        <button class="tab-btn" data-tab="apple-pay">
                            <i class="fab fa-apple"></i> Apple Pay
                        </button>
                    </div>

                    @await Component.InvokeAsync("_SavedCardComponentPartial")

                    @await Component.InvokeAsync("_CardsFormComponentPartial")

                </div>

                @await Component.InvokeAsync("_DeliverySectionComponentPartial")

            </div>

            @await Component.InvokeAsync("_OrderSummaryComponentPartial")

        </div>
    </div>
</main>
